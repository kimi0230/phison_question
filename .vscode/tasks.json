{
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "command": "clang++",
        "args": [
            "-o",
            "phison_question_1_5.o", // executable
            "phison_question_1_5.cpp", // main file
            "-g",
            "-v"
        ],
        "type": "shell",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "panel": "shared"
        },
        "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "/Users/kimi/myGithub/phison_question/"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }
    }]
}